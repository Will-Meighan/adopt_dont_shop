<h1>All Shelters</h1>

<% @shelters.each do |shelter| %>
  <h2><%= link_to shelter.name, "/shelters/#{shelter.id}" %></h2>
  <p><%= link_to 'Edit', "/shelters/#{shelter.id}/edit" %><p>
  <p><%= button_to 'Delete', "/shelters/#{shelter.id}", method: :delete %><p>
<% end %>

<%= link_to 'New Shelter', '/shelters/new' %>
